#:kivy 1.10.0
<KivyCamera>:

<EmployeeListPopup>:
	title: 'Choose Name'
	size_hint: (None, None)
	size: (500, 500)

<InstructionsNewFacePopup>:
	title: 'Adding New Face Instructions'
	size_hint: (None, None)
	size: (600, 500)

	BoxLayout:
		orientation: 'vertical'

		Label: 
			text: root.instruction_text
			size_hint: (1, 0.9)

		BoxLayout:
			orientation: 'horizontal'
			size_hint: (1, 0.1)

			Button:
				text: ''
				opacity: 0

			Button:
				text: ''
				opacity: 0
	
			Button:
				text: 'Cancel'
				on_release: root.on_answer(False)

			Button:
				text: 'Accept'
				on_release: root.on_answer(True)

<Panel>:
	do_default_tab: False
	tab_width: 150

	TabbedPanelItem:
		text: 'Main Menu'

		GridLayout:
			rows: 2
			Label:
				text: '\n[b][size=24]LOS ANGELES DODGERS R&D SOUNDBOARD[/size][/b] \n Developed by Kai Chang \n V1.0 \n[i][size=14]\nLive. Breathe. Blue.[/size][/i]'
				markup: True
				valign: 'center'
				halign: 'center'
				color: (0.1176, 0.5647, 1, 0.69)
				size_hint_y: None

			Image: 
				source: './images/lad.jpg'

	TabbedPanelItem:
		text: 'R&D'
		on_press: root.fill_IDs_rnd()

		GridLayout:
			rows: 4
			cols: 5

			Button:
				id: b0
				on_press: root.play_song(b0)

			Button:
				id: b1
				on_press: root.play_song(b1)

			Button:
				id: b2
				on_press: root.play_song(b2)

			Button:
				id: b3
				on_press: root.play_song(b3)

			Button:
				id: b4
				on_press: root.play_song(b4)

			Button:
				id: b5
				on_press: root.play_song(b5)

			Button:
				id: b6
				on_press: root.play_song(b6)

			Button:
				id: b7
				on_press: root.play_song(b7)

			Button:
				id: b8
				on_press: root.play_song(b8)

			Button:
				id: b9
				on_press: root.play_song(b9)

			Button:
				id: b10
				on_press: root.play_song(b10)

			Button:
				id: b11
				on_press: root.play_song(b11)
			
			Button:
				id: b12
				on_press: root.play_song(b12)

			Button:
				id: b13
				on_press: root.play_song(b13)
			
			Button:
				id: b14
				on_press: root.play_song(b14)

			Button:
				id: b15
				on_press: root.play_song(b15)

			Button:
				id: b16
				on_press: root.play_song(b16)

			Button:
				id: b17
				on_press: root.play_song(b17)

			Button:
				id: b18
				on_press: root.play_song(b18)

			Button:
				id: b19
				on_press: root.play_song(b19)


	TabbedPanelItem:
		text: 'Baseball Ops'

		AsyncImage: 
			source: './images/bbops.gif'
			anim_delay: 0.05


	TabbedPanelItem:
		text: 'Face Detector (beta)'
		on_press: root.initial_camera_setup()

		BoxLayout:
			orientation: 'vertical'

			Label:
				id: faceLabel
				text: '[b][size=24][color=#167ee2]Identification:[/color] None[/size][/b]'
				markup: True
				halign: 'center'
				size_hint_y: None

			KivyCamera:
				id: facecam
				size_hint_y: 2.2

			BoxLayout:
				orientation: 'horizontal'

				Button:
					id: cancelButton
					text: ''
					markup: True
					on_press: root.cancel_action()
					size_hint_y: None
					disabled: True

				Button:
					id: predictButton
					text: '[size=24]RUN[/size]'
					markup: True
					on_press: root.execute_machine()
					size_hint_y: None

				Button:
					id: addButton
					text: '[size=24]ADD FACE[/size]'
					markup: True
					on_press: root.add_face()
					size_hint_y: None